<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:id="@+id/delete_conf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to delete whole data"
                android:textColor="@android:color/black"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/conf_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delete_conf"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:background="@color/colorsave"
                android:text="Yes"/>
            <Button
                android:id="@+id/conf_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorsave"
                android:layout_below="@+id/delete_conf"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="190dp"
                android:text="No"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>